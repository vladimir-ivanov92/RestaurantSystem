@model RestaurantSystem.Web.ViewModels.Ingredients.IngredientViewModel


<form method="post" action="/Ingredients/AddIngredient">
    <div class="container" style="width: 18rem;">
        <label for="name">Ingredient name:</label>
        <input type="text" id="name" name="name" class="form-control" />

        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" class="form-control" value="0" />

        <label for="itemName">Name:</label>
        <input type="text" id="itemName" name="itemName" class="form-control" value="@Model.Name" />
        <br />
        <button type="submit" class="form-control">Submit</button>
    </div>
</form>



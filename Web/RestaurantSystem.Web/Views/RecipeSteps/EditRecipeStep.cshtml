@model RestaurantSystem.Web.ViewModels.RecipeSteps.RecipeStepViewModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" action="/RecipeSteps/EditRecipeStep">
    <div class="container" style="width: 80%;">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div>
            <label asp-for="Description">Description: </label>
            <textarea asp-for="Description" id="description" name="description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <label asp-for="Minutes">Minutes: </label>
        <input asp-for="Minutes" type="number" id="minutes" name="minutes" class="form-control" value="@Model.Minutes" min="1" />
        <span asp-validation-for="Description" class="text-danger"></span>

        <label for="itemName">Name: </label>
        <input type="text" id="itemName" name="itemName" class="form-control" value="@Model.ItemName" hidden />

        <label for="id">Name:</label>
        <input type="hidden" id="Id" name="id" class="form-control" value="@Model.Id" hidden />
        <br />
        <button type="submit" class="form-control">Edit</button>
    </div>
</form>



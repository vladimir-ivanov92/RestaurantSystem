@model RestaurantSystem.Web.ViewModels.RecipeSteps.RecipeStepViewModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" action="/RecipeSteps/EditRecipeStep">
    <div class="container" style="width: 80%;">
        <div>
            <label for="description">Description: </label>
            <textarea id="description" name="description" value="" class="form-control"></textarea>
        </div>

        <label for="minutes">Minutes: </label>
        <input type="number" id="minutes" name="minutes" class="form-control" value="0" />

        <label for="itemName">Name: </label>
        <input type="text" id="itemName" name="itemName" class="form-control" value="@Model.ItemName" disabled/>

        <label for="id">Name:</label>
        <input type="hidden" id="Id" name="id" class="form-control" value="@Model.Id" disabled/>
        <br />
        <button type="submit" class="form-control">Edit</button>
    </div>
</form>



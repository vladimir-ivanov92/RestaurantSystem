@model RestaurantSystem.Web.ViewModels.RecipeSteps.RecipeStepViewModel

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>

<form method="post" action="/RecipeSteps/AddRecipeStep">
    <div class="container" style="width: 80%;">
        <div>
            <label for="description">Description: </label>
            <textarea  id="description" name="description" class="form-control"></textarea>
        </div>

        <label for="minutes">Minutes: </label>
        <input type="number" id="minutes" name="minutes" class="form-control" value="0" />

        <label for="itemName">Name: </label>
        <input type="text" id="itemName" name="itemName" class="form-control" value="@Model.ItemName" />
        <br />
        <button type="submit" class="form-control">Submit</button>
    </div>
</form>


